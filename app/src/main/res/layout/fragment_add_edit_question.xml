<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/questionTextInputLayout"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:elevation="4dp"
                android:background="@drawable/background_edit_text">

                <EditText
                    android:id="@+id/question_editText"
                    android:hint="@string/type_your_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:cursorVisible="true"
                    android:inputType="textMultiLine"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/explanation_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/explanation"
                android:textColor="@color/color_white"
                android:layout_marginTop="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:elevation="4dp"
                android:textSize="18sp"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_blue" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/answer1TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:elevation="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_edit_text">

                <CheckBox
                    android:id="@+id/answer1_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/answer1_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/answer_1"
                    android:imeOptions="actionNext"
                    android:cursorVisible="true"
                    android:inputType="textMultiLine"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/answer2TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:elevation="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_edit_text">

                <CheckBox
                    android:id="@+id/answer2_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/answer2_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/answer_2"
                    android:imeOptions="actionNext"
                    android:cursorVisible="true"
                    android:inputType="textMultiLine"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_button_add">

                <ImageButton
                    android:id="@+id/add_answer3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/add_button"
                    android:background="@color/trans"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/answer3TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:elevation="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_edit_text"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/answer3_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/answer3_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/answer_3"
                    android:imeOptions="actionNext"
                    android:cursorVisible="true"
                    android:inputType="textMultiLine"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/button4Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:background="@drawable/background_button_add">

                <ImageButton
                    android:id="@+id/add_answer4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/add_button"
                    android:background="@color/trans"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/answer4TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:elevation="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_edit_text"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/answer4_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/answer4_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/answer_4"
                    android:imeOptions="actionNext"
                    android:cursorVisible="true"
                    android:inputType="textMultiLine"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/button5Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:background="@drawable/background_button_add">

                <ImageButton
                    android:id="@+id/add_answer5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/add_button"
                    android:background="@color/trans"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/answer5TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:elevation="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_edit_text"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/answer5_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/answer5_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/answer_5"
                    android:imeOptions="actionNext"
                    android:cursorVisible="true"
                    android:inputType="textMultiLine"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/button6Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:background="@drawable/background_button_add">

                <ImageButton
                    android:id="@+id/add_answer6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/add_button"
                    android:background="@color/trans"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/answer6TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:elevation="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_edit_text"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/answer6_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/answer6_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/answer_6"
                    android:imeOptions="actionNext"
                    android:cursorVisible="true"
                    android:inputType="textMultiLine"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/button7Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:background="@drawable/background_button_add">

                <ImageButton
                    android:id="@+id/add_answer7"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/add_button"
                    android:background="@color/trans"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/answer7TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:elevation="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_edit_text"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/answer7_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/answer7_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/answer_7"
                    android:imeOptions="actionNext"
                    android:cursorVisible="true"
                    android:inputType="textMultiLine"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/button8Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:background="@drawable/background_button_add">

                <ImageButton
                    android:id="@+id/add_answer8"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/add_button"
                    android:background="@color/trans"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/answer8TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:elevation="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_edit_text"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/answer8_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/answer8_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/answer_8"
                    android:imeOptions="actionDone"
                    android:cursorVisible="true"
                    android:inputType="textMultiLine"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/saveQuestionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/fab_margin"
                android:src="@drawable/done"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>