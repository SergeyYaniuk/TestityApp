<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorPrimary">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleTextInputLayout"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:elevation="4dp"
        android:background="@drawable/background_edit_text">

        <EditText
            android:id="@+id/titleEditText"
            android:hint="@string/title_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:cursorVisible="true"
            android:inputType="text"/>
    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:background="@color/light_blue" />

    <LinearLayout
        android:id="@+id/category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/category_textView"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:elevation="4dp"
            android:paddingStart="8dp"
            android:textColor="@color/color_white"
            android:text="@string/category"/>

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:spinnerMode="dropdown"
            android:elevation="4dp"
            android:background="@drawable/background_custom_spinner"
            android:popupBackground="@color/light_blue"
            android:layout_height="28dp">
        </Spinner>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_blue" />

    <LinearLayout
        android:id="@+id/language_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/language_textView"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:elevation="4dp"
            android:paddingStart="8dp"
            android:textColor="@color/color_white"
            android:text="@string/language"/>

        <Spinner
            android:id="@+id/language_spinner"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:spinnerMode="dropdown"
            android:elevation="4dp"
            android:background="@drawable/background_custom_spinner"
            android:popupBackground="@color/light_blue"
            android:layout_height="28dp">
        </Spinner>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_blue" />

    <LinearLayout
        android:id="@+id/is_online_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/is_online_textView"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="@string/available_online"
            android:textColor="@color/color_white"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/is_online_checkbox"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:checked="true"/>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/descriptionTextInputLayout"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:elevation="4dp"
        android:background="@drawable/background_edit_text">

        <EditText
            android:id="@+id/descriptionEditText"
            android:hint="@string/hint_description_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|start"
            android:imeOptions="actionNext"
            android:cursorVisible="true"
            android:inputType="text"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/add_questions_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="4dp"
        android:elevation="8dp"
        android:text="@string/add_questions"
        android:textColor="@color/color_white"
        android:background="@drawable/background_green_button"/>

</LinearLayout>