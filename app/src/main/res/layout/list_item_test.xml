<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:focusable="true"
    card_view:cardBackgroundColor="@color/color_white"
    card_view:cardElevation="8dp"
    card_view:contentPadding="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/test_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="Android development test"
            android:textSize="18sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/category_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/category"
            android:textAllCaps="true"
            android:textSize="12sp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/language_label"
            card_view:layout_constraintEnd_toStartOf="@+id/language_label"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/language_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/language"
            android:textAllCaps="true"
            android:textSize="12sp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/number_of_ques_label"
            card_view:layout_constraintEnd_toStartOf="@+id/number_of_ques_label"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toEndOf="@+id/category_label" />

        <TextView
            android:id="@+id/number_of_ques_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/number_of_questions"
            android:textAllCaps="true"
            android:textSize="12sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toEndOf="@+id/language_label"
            card_view:layout_constraintTop_toBottomOf="@+id/test_title_tv" />

        <TextView
            android:id="@+id/category_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Geographical"
            android:gravity="center"
            android:padding="4dp"
            android:textSize="12sp"
            android:fontFamily="@font/source_sans"
            android:background="@color/colorPrimary"
            android:textColor="@color/color_white"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/language_tv"
            card_view:layout_constraintEnd_toStartOf="@+id/language_tv"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/language_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Ukrainian"
            android:gravity="center"
            android:padding="4dp"
            android:textSize="12sp"
            android:fontFamily="@font/source_sans"
            android:background="@color/colorPrimary"
            android:textColor="@color/color_white"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/num_of_ques_tv"
            card_view:layout_constraintEnd_toStartOf="@+id/num_of_ques_tv"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toEndOf="@+id/category_tv" />

        <TextView
            android:id="@+id/num_of_ques_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="107"
            android:gravity="center"
            android:padding="4dp"
            android:textSize="12sp"
            android:fontFamily="@font/source_sans"
            android:background="@color/colorPrimary"
            android:textColor="@color/color_white"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toEndOf="@+id/language_tv"
            card_view:layout_constraintTop_toBottomOf="@+id/number_of_ques_label" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>