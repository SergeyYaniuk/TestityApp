<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
        <item>
            <shape>
            <gradient
                android:angle="90"
                android:endColor="#e1f5fe"
                android:startColor="#e1f5fe"
                android:type="linear" />

            <stroke
                android:width="1dp"
                android:color="#e1f5fe" />

            <corners android:radius="4dp" />

                <padding android:bottom="2dp"
                    android:left="2dp"
                    android:right="8dp"
                    android:top="2dp" />

        </shape>
        </item>
        <item>
            <bitmap android:gravity="center|right"
                android:src="@drawable/down" />
        </item>
    </layer-list></item>

</selector>